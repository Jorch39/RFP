   "source": [
    "import streamlit as st\n",
    "import pandas as pd\n",
    "from sentence_transformers import SentenceTransformer, util\n",
    "\n",
    "# Cargar modelo de embeddings\n",
    "@st.cache_resource\n",
    "def load_model():\n",
    "    return SentenceTransformer('all-MiniLM-L6-v2')\n",
    "\n",
    "model = load_model()\n",
    "\n",
    "st.title(\"üîç Buscador de Respuestas Inteligente\")\n",
    "st.markdown(\"Sube tu base de conocimiento y un archivo con preguntas nuevas para obtener respuestas autom√°ticas.\")\n",
    "\n",
    "# Subir archivos\n",
    "base_file = st.file_uploader(\"üìö Sube tu base de conocimiento (.xlsx)\", type=[\"xlsx\"])\n",
    "preguntas_file = st.file_uploader(\"üìù Sube las nuevas preguntas (.csv)\", type=[\"csv\"])\n",
    "\n",
    "if base_file and preguntas_file:\n",
    "    # Leer archivos\n",
    "    base_df = pd.read_excel(base_file)\n",
    "    preguntas_df = pd.read_csv(preguntas_file)\n",
    "\n",
    "    # Validar columnas\n",
    "    if \"Pregunta\" not in base_df.columns or \"Respuestas\" not in base_df.columns:\n",
    "        st.error(\"El archivo base debe tener columnas 'Pregunta' y 'Respuestas'\")\n",
    "    elif \"Pregunta\" not in preguntas_df.columns:\n",
    "        st.error(\"El archivo de nuevas preguntas debe tener una columna 'Pregunta'\")\n",
    "    else:\n",
    "        with st.spinner(\"Procesando preguntas...\"):\n",
    "            # Embeddings\n",
    "            base_embeddings = model.encode(base_df[\"Pregunta\"].tolist(), convert_to_tensor=True)\n",
    "\n",
    "            resultados = []\n",
    "            for pregunta_usuario in preguntas_df[\"Pregunta\"]:\n",
    "                pregunta_embedding = model.encode(pregunta_usuario, convert_to_tensor=True)\n",
    "                similitudes = util.cos_sim(pregunta_embedding, base_embeddings)[0]\n",
    "                top_scores, top_indices = similitudes.topk(3)\n",
    "\n",
    "                for rank, (score, idx) in enumerate(zip(top_scores.tolist(), top_indices.tolist()), start=1):\n",
    "                    resultados.append({\n",
    "                        \"Pregunta de Entrada\": pregunta_usuario,\n",
    "                        \"Respuesta N¬∫\": rank,\n",
    "                        \"Respuesta Similar\": base_df.iloc[idx][\"Respuestas\"],\n",
    "                        \"Similitud (Probabilidad Aproximada)\": round(float(score), 4)\n",
    "                    })\n",
    "\n",
    "            resultado_df = pd.DataFrame(resultados)\n",
    "\n",
    "        st.success(\"‚úÖ Procesamiento completo\")\n",
    "        st.write(\"üìÑ Resultados:\")\n",
    "        st.dataframe(resultado_df)\n",
    "\n",
    "        # Descargar CSV\n",
    "        csv = resultado_df.to_csv(index=False).encode(\"utf-8\")\n",
    "        st.download_button(\"üì• Descargar resultados como CSV\", csv, \"respuestas_generadas.csv\", \"text/csv\")\n"
   ]
  },
